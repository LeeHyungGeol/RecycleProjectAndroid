<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wasterecycleproject">
    <!-- 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserCommunityActivity" />
        <activity android:name=".UserNoteActivity" />
        <activity android:name=".CommunityDetailActivity" />
        <activity android:name=".RegisterBoardActivity" />

        <!-- 팝업 Activity -->
        <activity
            android:name=".RegisterUserActivity"
            android:theme="@android:style/Theme.Dialog" />

        <activity
            android:name=".PopUpSendNoteActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".PopupHelpActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".PopupProperRecycleActivity"
            android:theme="@android:style/Theme.Dialog" /> <!--  -->
        <activity android:name=".RecycleConfiguartionActivity" />
        <activity android:name=".DischargeTipsActivity" />
        <activity android:name=".MeasureActivity" />
        <activity android:name=".MainActivity"></activity>

    </application>

</manifest>